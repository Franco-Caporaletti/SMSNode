<div class="row">

  <div class="col-md-4">
    <form action="/send-sms" method="POST" class="card card-body">
      <div class="form-group">
        <input type="text" name="message" placeholder="Escribe tu mensaje" class="form-control" autofocus>
      </div>
      <div class="form-group">
        <input type="tel" name="phone" placeholder="+543410000000" class="form-control" autocomplete="off">
      </div>
      <button class="btn btn-warning btn-block">
        Enviar
      </button>
    </form>

  </div>
  <div class="col-md-8">
    <div class="card card-body">
      <p class="card-text">Cantidad de mensajes: <em>{{messages.length}}</em></p>
    </div>
    {{#if messages}}
    <ul class="list-group" style="height: 70vh; overflow-y: auto;" id="messages">
      {{#each messages}}
      <li class="list-group-item list-group-item-info list-group-item-action">
        <p>{{Body}}</p>
        <span>{{From}}</span>
        <span>{{id}}</span>
        <span>{{timeago createdAt}}</span>
      </li>
      {{/each}}
    </ul>
    {{else}}
    <p>Aun no hay mensajes</p>
    {{/if}}
  </div>

</div>